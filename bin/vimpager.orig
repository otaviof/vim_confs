#!/bin/sh

PATH="/bin:/usr/bin:/usr/local/git/bin/"

file="$@"
if [ -z "$file" ];
    then file="-";
fi

vim() {
    vim_binary="/usr/bin/vim" #"$VIM_APP_DIR/MacVim.app/Contents/MacOS/Vim"
    less_rc="$HOME/.vim/less.vim"
    $vim_binary -R -U $less_rc -u $less_rc "$@"
}

cat $file |sed -e 's/\[[^m]*m//g; s/.//g' |vim - > /dev/null

# EOF
